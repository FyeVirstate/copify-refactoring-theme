    },
    {
      "type": "text",
      "id": "others_label",
      "label": "Competitors label",
      "default": "Others"
    },
    {
      "type": "color",
      "id": "checkmark_color",
      "default": "#181818",
      "label": "Checkmark color"
    },
    
    {
      "type": "checkbox",
      "id": "override_cell_headers_text_color",
      "label": "Override Cell Headers Text Color",
      "default": false
    },
    {
      "type": "color",
      "id": "cell_headers_text_color",
      "label": "Benefits Text Color",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "override_x_color",
      "label": "Override X Color",
      "default": false
    },
    {
      "type": "color",
      "id": "x_color",
      "label": "X Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Table row",
      "settings": [
        {
          "type": "text",
          "id": "benefit",
          "default": "Benefit",
          "label": "Benefit"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Benefit text Color",
          "default": "#ffffff"
        },
        {
          "type": "checkbox",
          "id": "us",
          "default": true,
          "label": "Us"
        },
        {
          "type": "checkbox",
          "id": "others",
          "default": false,
          "label": "Others"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparison table",
      "blocks": [
        {
          "type": "row"
        },
        {
          "type": "row"
        },
        {
          "type": "row"
        },
        {
          "type": "row"
        },
        {
          "type": "row"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
