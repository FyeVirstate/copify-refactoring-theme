      "id": "image_border_radius",
      "label": "Image Border Radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Button"
    },

    {
      "type": "text",
      "id": "button_label",
      "label": "t:sections.slideshow.blocks.slide.settings.button_label.label",
      "info": "t:sections.slideshow.blocks.slide.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.slideshow.blocks.slide.settings.link.label"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "label": "t:sections.slideshow.blocks.slide.settings.secondary_style.label",
      "default": false
    },
    {
      "type": "header",
      "content": "Table"
    },
    {
      "type": "checkbox",
      "id": "override_benefit_size",
      "label": "Override Benefits Size",
      "default": false
    },
    {
      "type": "range",
      "id": "benefits_desktop_size",
      "min": 6,
      "max": 54,
      "step": 1,
      "unit": "px",
      "label": "Benefits Desktop Font Size",
      "default": 16
    },
    {
      "type": "range",
      "id": "benefits_mobile_size",
      "min": 6,
      "max": 54,
      "step": 1,
      "unit": "px",
      "label": "Benefits Mobile Font Size",
      "default": 14
    },
    {
      "type": "checkbox",
      "id": "override_compare_cell_text_color",
      "label": "Override Benefits Text Color",
      "default": false
    },
    {
      "type": "color",
      "id": "compare_subheading_text_color",
      "label": "Subheading Text Color",
      "default": "#00bb00"
    },
    {
      "type": "color",
      "id": "compare_cell_text_color",
      "label": "Benefits Text Color",
      "default": "#383838"
    },
    {
      "type": "color",
      "id": "compare_cell_background_color",
      "label": "Benefits Background Color",
      "default": "#e84343"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 25,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Desktop logo width",
      "default": 90
    },
    {
      "type": "range",
      "id": "mobile_logo_width",
      "min": 25,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile logo width",
      "default": 60
    },
    {
      "type": "text",
      "id": "us_label",
      "label": "Custom Label",
