{%- liquid
  if section.settings.flip_horizontal
    assign scaleX = 'scaleX(-1)'
  else
    assign scaleX = 'scaleX(1)'
  endif

  if section.settings.flip_vertical
    assign scaleY = 'scaleY(-1)'
  else
    assign scaleY = 'scaleY(1)'
  endif
-%}

{% style %}
  .section-divider-{{ section.id }} {
    transform: {{ scaleX }} {{ scaleY }};
  }
  .section-{{ section.id }}-top-padding {
    height: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-bottom-padding {
    height: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-top-padding {
      height: {{ section.settings.padding_top }}px;
    }
    .section-{{ section.id }}-bottom-padding {
      height: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="section-{{ section.id }}-top-padding color-{% if section.settings.flip_vertical %}{{ section.settings.shape_color }}{% else %}{{ section.settings.background_color }}{% endif %}" style="background:{{ section.settings.background_color }};color:{{ section.settings.shape_color }}">
  &nbsp
</div>
