{% schema %}
{
  "name": "Divider",
  "settings": [
    {
      "type": "select",
      "id": "shape",
      "options": [
        {
          "value": "diagonal_1",
          "label": "Diagonal"
        },
        {
          "value": "curved_4",
          "label": "Curved"
        },
        {
          "value": "waves_2",
          "label": "Waves"
        }
      ],
      "label": "Shape",
      "default": "diagonal_1"
    },
    {
      "type": "checkbox",
      "id": "flip_horizontal",
      "label": "Flip horizontal",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "flip_vertical",
      "label": "Flip vertical",
      "default": false
    },
    {
      "type": "color",
      "id": "shape_color",
      "label": "Shape color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Section Divider",
      "category": "Divider"
    }
  ]
}
{% endschema %}

