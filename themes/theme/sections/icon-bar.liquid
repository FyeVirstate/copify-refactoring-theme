{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      padding-left: {{ section.settings.padding_horizontal_desktop }}px !important;
      padding-right: {{ section.settings.padding_horizontal_desktop }}px !important;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    #heading-{{ section.id }}{
    {% if section.settings.override_heading_size %}
      font-size: {{ section.settings.heading_size }}px;
      line-height: {{ section.settings.heading_size | plus: 8 }}px;
    {% endif %}
    {% if section.settings.override_heading_color %}
      color: {{ section.settings.heading_color }};
    {% endif %}
  }

  @media(max-width: 786px) {
    .section-{{ section.id }}-padding {
      padding-left: {{ section.settings.padding_horizontal_mobile }}px !important;
      padding-right: {{ section.settings.padding_horizontal_mobile }}px !important;
    }


    #heading-{{ section.id }}{
    {% if section.settings.override_heading_size %}
      font-size: {{ section.settings.heading_mob_size }}px;
      line-height: {{ section.settings.heading_mob_size | plus: 8 }}px;
    {% endif %}

  }

  }
  #section-text-{{ section.id }},
  #section-text-{{ section.id }} p {
    {% if section.settings.override_body_size %}
      font-size: {{ section.settings.body_size }}px!important;
      line-height: {{ section.settings.body_size | plus: 4 }}px;
    {% endif %}
    {% if section.settings.override_body_color %}
      color: {{ section.settings.body_color }};
    {% endif %}

  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div
  id="multicolumn-{{ section.id }}"
  class="multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and false or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}"
>
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="center  title-wrapper--self-padded-mobile title-wrapper--no-top-margin{% if section.settings.text != blank %} multicolumn-title-with-text{% endif %}">
        <h2
          class="title"
          id="heading-{{ section.id }}"
          style="margin-bottom: 2.5rem;"
        >
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {%- endunless -%}
    {% if section.settings.text != blank %}
      <div
        class="center multicolumn-text sw-base-text-color image-with-text__text rte body"
        id="section-text-{{ section.id }}"
      >
        {{ section.settings.text }}
      </div>
    {% endif %}
    <slider-component class="slider-mobile-gutter">
      <ul
        class="icon-bar-slider multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
        style="justify-content: center;"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.custom_icon_image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.custom_icon_image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.custom_icon_image == blank
            and block.settings.title == blank
            and block.settings.text == blank
          -%}
            {%- assign empty_column = ' multicolumn-list__item--empty' -%}
          {%- endif -%}

          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %} center{{ empty_column }}"
            {{ block.shopify_attributes }}
          >
            <div class="icon-bar-card multicolumn-card content-container">
              <div class="icon-bar-card__icon icon-bar-card__icon--{{ section.settings.icon_size }} ">
                {%- if block.settings.custom_icon_image == blank -%}
                  {%- render 'icon-accordion',
                    icon: block.settings.icon,
                    override_icon_color: true,
                    custom_icon_color: block.settings.custom_icon_color,
                    override_icon_size: block.settings.override_icon_size,
                    custom_icon_size: block.settings.custom_icon_size
                  -%}
                {%- else -%}
                  <img
                    src="{{ block.settings.custom_icon_image | image_url }}"
                    {% if block.settings.custom_icon_image.alt != blank %}
                      alt="{{ block.settings.custom_icon_image.alt | escape }}"
                    {% else %}
                      role="presentation"
                    {% endif %}
                    {% if block.settings.override_icon_size %}
                      style="width: {{ block.settings.custom_icon_size }}px; height: {{ block.settings.custom_icon_size }}px;"
                    {% endif %}
                    height="auto"
                    width="auto"
                    loading="lazy"
                  >
                {%- endif -%}
              </div>
              {% unless block.settings.title == blank and block.settings.text == blank %}
                <div class="sec_icon-bar multicolumn-card__info sw-base-text-color">
                  {%- if block.settings.title != blank -%}
                    <p style="font-size: {{ block.settings.icon_heading_font_size_new }}px; {%- if block.settings.override_icon_heading_color -%} color: {{ block.settings.icon_heading_color }}; {% endif %}">
                      {{ block.settings.title | escape }}
                    </p>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <div
                      style="margin-left: auto; margin-right: auto; {% if block.settings.override_column_text_size %} font-size: {{ block.settings.column_text_size }}px !important; line-height: {{ block.settings.column_text_size | plus: 4 }}px; {% endif %} {% if block.settings.override_column_text_color %} color: {{ block.settings.column_text_color }} !important;{% endif %}"
                      class="column-text-{{ section.id }} sw-base-text-color image-with-text__text rte body"
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                </div>
              {% endunless %}
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
  </div>
</div>

