{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }
  .section-{{ section.id }}-padding .icon_text_cls svg path {
    fill: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}-padding .btn-bottom-box ul li {
    color: rgb(var(--color-foreground));
  }

{%- endstyle -%}

{% capture guarantee_icons %}
<div class="icon_text_cls btn-bottom-box">
            <ul class="icon-with-text icon-with-text--horizontal list-unstyled">
          
            {% for block in section.blocks %}
              {% if block.type == 'guarantee' %}
                <li class="icon-with-text__item">
                  {% if block.settings.icon != blank %}
                    {% render 'icons',icon:block.settings.icon %}
                  {% endif %}
                  <span>{{ block.settings.text }}</span>
                </li>
              {% endif %}
            {% endfor %}
            </ul>
          </div>
{% endcapture %}
<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div style="padding: 1rem;" class="rich-text content-container color-{{ section.settings.color_scheme }} {% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="heading_common rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
                {% endif %}>
                {{ block.settings.heading }}
              </h2>

            {%- when 'caption' -%}
              <p
                class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
                {% endif %}>
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
                {% endif %}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              {%- comment -%} Get the most recent product if button_link is # or blank or collections/all {%- endcomment -%}
              {%- assign button_url_1 = block.settings.button_link -%}
              {%- assign button_url_2 = block.settings.button_link_2 -%}
              {%- if block.settings.button_link == '#' or block.settings.button_link == blank or block.settings.button_link contains 'collections/all' -%}
                {%- assign recent_products = collections.all.products | sort: 'created_at' | reverse -%}
                {%- assign recent_product = recent_products[0] -%}
                {%- if recent_product -%}
                  {%- assign button_url_1 = recent_product.url -%}
                {%- else -%}
                  {%- assign button_url_1 = '/products' -%}
                {%- endif -%}
              {%- endif -%}
              {%- if block.settings.button_link_2 == '#' or block.settings.button_link_2 == blank or block.settings.button_link_2 contains 'collections/all' -%}
                {%- assign recent_products = collections.all.products | sort: 'created_at' | reverse -%}
                {%- assign recent_product = recent_products[0] -%}
                {%- if recent_product -%}
                  {%- assign button_url_2 = recent_product.url -%}
                {%- else -%}
                  {%- assign button_url_2 = '/products' -%}
                {%- endif -%}
              {%- endif -%}
              <div
                class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
                {% endif %}>
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if button_url_1 == blank %}
                    role="link"
                    aria-disabled="true"
                    {% else %}
                    href="{{ button_url_1 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if button_url_2 == blank %}
                    role="link"
                    aria-disabled="true"
                    {% else %}
                    href="{{ button_url_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
              {{ guarantee_icons }}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

