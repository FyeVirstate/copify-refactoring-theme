<style>
  .section-{{ section.id }}-padding {
    background: rgb(var(--color-background));
  }


  .section-{{ section.id }}-padding button.accordion-btn {
    color: rgb(var(--color-foreground));
    border: none !important;
    background: transparent;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 1rem 0;
    text-align: left;
    cursor: pointer;
    position: relative;
  }

  /* Border on button when closed */
  .section-{{ section.id }}-padding button.accordion-btn:not(.active) {
    border-bottom: 1px solid rgb(var(--color-foreground)) !important;
  }

  .section-{{ section.id }}-padding button.accordion-btn:after {
    content: '+';
    position: absolute;
    right: 0;
    font-size: 20px;
    font-weight: bold;
  }

  .section-{{ section.id }}-padding button.accordion-btn.active:after {
    content: '\2212';
  }

  /* Border moves to the bottom of the panel when active */
  .section-{{ section.id }}-padding .panel.activePanel {
    border-bottom: 1px solid rgb(var(--color-foreground)) !important;
  }


  .section-{{ section.id }}-padding .panel {
    background: transparent !important;
    border: none !important;
    padding: 0 0 1rem;
  }

  .section-{{ section.id }}-padding .inner-faq-body {
    border: none !important;
    padding: 0;
  }
  .section-{{ section.id }}-padding .btn.btn-red {
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }


  .section-{{ section.id }}-padding .btn-bottom-box svg path {
    fill: rgb(var(--color-foreground));
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }

  /* FAQ Layout Styles */
  .com-faq-sec--no-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .right-faq-box--centered {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Centered content wrapper (similar to image-with-text) */
  .faq-content--wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }


  .faq-content--wrapper .faq-box {
    width: 100%;
    max-width: var(--page-width);
  }

  /* Image sizing classes - matching other sections */
  .left-img-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    position: relative;
  }

  .faq-image--adapt {
    max-width: var(--page-width);
    width: 100%;
    height: auto;
  }

  .faq-image--small {
    max-width: var(--page-width);
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .faq-image--medium {
    max-width: var(--page-width);
    width: 100%;
    height: 500px;
    object-fit: cover;
  }

  .faq-image--large {
    max-width: var(--page-width);
    width: 100%;
    height: 600px;
    object-fit: cover;
  }

  /* Hide image on mobile */
  @media screen and (max-width: 749px) {
    .left-img-box.hide-mobile {
      display: none;
    }
  }

</style>
<!-- sections->product-faq.liquid -->
<div class="faq-sec section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}" data-section-type="product-faq">
  <div class="page-width">
    <div class="com-faq-sec{% unless section.settings.image != blank %} com-faq-sec--no-image{% endunless %}">
      {% if section.settings.image != blank %}
        <div class="left-img-box{% if section.settings.hide_image_mobile %} hide-mobile{% endif %}">
          <img
            src="{{ section.settings.image | img_url: '800x' }}"
            alt="{{section.settings.heading}}"
            class="faq-image--{{ section.settings.image_height }}">
        </div>
      {% endif %}
      <div class="right-faq-box{% unless section.settings.image != blank %} right-faq-box--centered{% endunless %}">
        <div class="faq-box-sec">
          <div class="faq-content--wrapper">
            {%- assign title_size = section.settings.heading_size | default: 'h2' -%}
            <h2 class="{{ title_size }}">{{ section.settings.heading }}</h2>
            <div class="faq-box">

              {% for block in section.blocks %}

                <button class="accordion-btn">{{ block.settings.q }}</button>
                <div class="panel">
                  <div class="inner-faq-body">
                    {{ block.settings.a }}
                  </div>
                </div>
              {% endfor %}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
/* FAQ accordion styling without pseudo elements */</style><script>
  const accordions = document.querySelectorAll(".accordion-btn");

  accordions.forEach((btn) => {
    btn.addEventListener("click", function () {
      // Close all panels
      accordions.forEach((otherBtn) => {
        if (otherBtn !== btn) {
          otherBtn.classList.remove("active");
          const otherPanel = otherBtn.nextElementSibling;
          otherPanel.style.maxHeight = null;
        }
      });

      // Toggle current
      this.classList.toggle("active");
      const panel = this.nextElementSibling;

      if (this.classList.contains("active")) {
        panel.style.maxHeight = panel.scrollHeight + "px";
        panel.classList.add("activePanel");
      } else {
        panel.classList.remove("activePanel");
        panel.style.maxHeight = null;
      }
    });
  });
</script><!-- comment -->

