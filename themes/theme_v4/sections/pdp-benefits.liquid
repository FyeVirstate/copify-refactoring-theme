{{ 'pdp-benefits.css' | asset_url | stylesheet_tag }}
{%- capture image -%}
    <div class="pdp-benefits_image-column">
            <div class="pdp-benefits-image-container">
                <div class="pdp-benefits-feature-image">
                    {%- if section.settings.image != blank -%}
                        {%- if section.settings.image contains '://' -%}
                            {{ section.settings.image | image_url:width:800 | image_tag:preload:true,class:'pdp-benefits-img' }}
                        {%- else -%}
                            <img src="{{ section.settings.image | asset_url }}" loading="eager" class="pdp-benefits-img">
                        {%- endif -%}
                    {%- else -%}
                        {{ 'collection-1' | placeholder_svg_tag }}
                    {%- endif -%}
                </div>
            </div>
    </div>
{%- endcapture -%}

<div class="pdp-benefits_mainwrapper pdp-bnfts-{{ section.id }} gradient color-{{ section.settings.color_scheme }}" data-section-type="pdp-benefits">
  <div class="pdp-benefits_mainouter">
    <div class="pdp-benefits_container">

        {%- if section.settings.heading != blank or section.settings.paragraph != blank -%}
        <div class="pdp-benefits_header_content onlyShowMob">
            <div class="pdp-benefits_header">
                {%- if section.settings.heading != blank -%}<div class="pdp-benefits_header_heading text-color">{{ section.settings.heading }}</div>{%- endif -%}
                {%- if section.settings.paragraph != blank -%}<div class="custom-subtitle text-color">{{ section.settings.paragraph }}</div>{%- endif -%}
            </div>
        </div>
        {%- endif -%}

        {%- if section.settings.image_align == 'left' -%}
            {{ image }}
        {%- endif -%}

        <div class="pdp-benefits_content-column">
            {%- if section.settings.heading != blank or section.settings.paragraph != blank -%}
            <div class="pdp-benefits_header_content onlyShowDesk">
                <div class="pdp-benefits_header">
                    {%- if section.settings.heading != blank -%}<div class="pdp-benefits_header_heading text-color">{{ section.settings.heading }}</div>{%- endif -%}
                    {%- if section.settings.paragraph != blank -%}<div class="custom-subtitle text-color">{{ section.settings.paragraph }}</div>{%- endif -%}
                </div>
            </div>
            {%- endif -%}

            <div class="pdp-benefits_listwp itembackground-clr">
                {%- for block in section.blocks -%}
                <div class="pdp-benefits-item">
                    <div class="pdp-benefits-header">
                        {%- if block.settings.icon != 'none' -%}
                            <div class="pdp-benefits-icon">
                                 {% render 'icons-list', icon: block.settings.icon %}
                            </div>
                        {%- endif -%}
                        {%- if block.settings.title != blank -%}
                            <div class="pdp-benefits-title inner-text-color">{{ block.settings.title }}</div>
                        {%- endif -%}
                    </div>
                    {%- if block.settings.description != blank -%}
                        <div class="pdp-benefits-description-container">
                            <div class="pdp-benefits-description inner-text-color">{{ block.settings.description }}</div>
                        </div>
                    {%- endif -%}
                </div>
                {%- endfor -%}
            </div>
        </div>

        {%- if section.settings.image_align == 'right' -%}
            {{ image }}
        {%- endif -%}

    </div>
  </div>
</div>
<style>
    .pdp-bnfts-{{ section.id }} hig {
        color: rgb(var(--color-sale-badge))!important;
        background: none;
        -webkit-text-fill-color: unset;
    }
</style>
    