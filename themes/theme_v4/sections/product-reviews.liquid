{%- style -%}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-padding .slick-prev::before,
  .section-{{ section.id }}-padding .slick-next::before {
    color: rgb(var(--color-foreground)) !important;
    font-size: 30px;
  }

  .section-{{ section.id }}-padding h2,
  .section-{{ section.id }}-padding h4,
  .section-{{ section.id }}-padding p {
    fill: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}-padding .review-text p,
  .section-{{ section.id }}-padding .review-footer span {
    color: rgb(var(--color-foreground), 0.7) !important;
  }

  .section-{{ section.id }}-padding .review-slider .review-box {
    background: rgb(var(--color-innerHighlight)) !important;
  }

  .section-{{ section.id }}-padding .sr-stars svg:not(.half_star) path {
    fill: rgb(var(--color-foreground));
  }
  .section-{{ section.id }}-padding .rating-box svg.empty_star path {
    fill: transparent;
    stroke: rgb(var(--color-foreground));
  }
  .section-{{ section.id }}-padding .sr-star svg {
    stroke: rgb(var(--color-foreground));
  }


  .section-{{ section.id }}-padding .sr-stars svg.half_star {
    stroke: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}-padding .sr-stars svg path.half_star_path,
  .activeColor,
  .icon_text_cls_guarantee svg path {
    fill: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}-padding .sr-stars svg.half_star {
    stroke: rgb(var(--color-foreground));
  }
  .section-{{ section.id }}-padding .sr-stars svg path.half_star_border {
    stroke: rgb(var(--color-foreground));
  }
  .section-{{ section.id }}-padding .sr-stars svg path.half_star_border {
    stroke: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}-padding strong {
    color: var(--color-highliter);
  }

  .section-{{ section.id }}-padding .btn-bottom-box .btn.btn-red {
    background: rgb(var(--color-button)) !important;
    color: rgb(var(--color-button-text)) !important;
  }


  .section-{{ section.id }}-padding .custom-tag {
    border: 1px solid rgb(var(--color-foreground));
  }
  @media screen and (max-width: 992px) {
    .section-{{ section.id }}-padding .slick-prev {
      left: -10px;
      z-index: 99;
    }

    .section-{{ section.id }}-padding .slick-next {
      right: 5px;
      z-index: 99;
    }
  }

  @media screen and (min-width: 750px) {

    .section-{{ section.id }}-padding .slick-prev {
      left: -35px;
      z-index: 99;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
