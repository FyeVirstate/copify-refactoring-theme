{% schema %}
{ "name": "Image with faq", "settings": [
    {"type": "select","id": "image_alignment","label": "Image alignment","options": [{"value": "left","label": "Left"},{"value": "right","label": "Right"}],"default":"left"},
  {"type": "header","content": "Media"},  
    {"type": "image_picker","id": "image","label": "Image"},
    {"type": "video","id": "video","label": "Video"},
  {"type": "header","content": "Content"},
    {"type": "liquid","id": "heading","label": "Heading","default":"Ce qui nous rend <span>différents</span>"},
    {"type": "liquid","id": "paragraph","label": "Paragraph","default":"Semelle épaisse et rembourrée + conception respirante = confort tout au long de la journée sans compromis."},
    { "type": "color_scheme", "id": "color_scheme", "label": "t:sections.multirow.settings.container_color_scheme.label", "default": "scheme-1" },
],"blocks":[{"type": "faq","name":"FAQ","settings": [
  {"type": "text","id": "question","label": "Question","default":"Transformez votre expérience de course dès aujourd'hui"},
  {"type": "liquid","id": "content","label": "Paragraph","default":"Ne vous contentez pas de chaussures ordinaires. Découvrez l'alliance parfaite entre respirabilité, amorti et style."}
]}],"presets": [{ "name": "Image with faq","blocks": [{"type": "faq"},{"type": "faq"},{"type": "faq"},{"type": "faq"}] }]}
{% endschema %}
   
{{ 'image-faq.css' | asset_url | stylesheet_tag }}
{%- capture image -%}
  <div class="media__layout_mgtxt showOnDesk">
    <div class="media__interior_mgtxt" js-video-container>
      {% if section.settings.image != blank %}
        {%- if section.settings.image contains '://' -%}
            {{ section.settings.image | image_url:width:800 | image_tag:loading:'lazy',class:'faq-img' }}
        {%- else -%}
            <img src="{{ section.settings.image | asset_url }}" loading="lazy" class="faq-img">
        {%- endif -%}
      {%- elsif section.settings.video != blank -%}
         {{ section.settings.video | video_tag:preload:true, autoplay:true, playsinline:true,muted:true,loop:true,oncontextmenu:"return false;" }}
          <div class="play_paused___action">
            <span class="action--play hidden"><svg width="24" height="24" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.5 12.5v-10l7 5z" stroke="#FFF" stroke-linejoin="round"></path></svg></span> 
            <span class="action--pause"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M14 19.495v-14h4v14zm-8 0v-14h4v14z" fill="#fff"></path></svg></span> 
          </div> 
      {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
  </div>
{%- endcapture -%}
{%- capture image_with_text -%}<div class="image_with_text__wrapper with_faq_mgtxt img-faq-{{section.id}} gradient color-{{ section.settings.color_scheme }}" data-section-type="image-faq" {% if section.settings.bg_color_enabled %}style="background-color:{{ section.settings.bg_color }}"{% endif %}>
  <div class="image_with_text_container page-width page-width--wide">
    {%- if section.settings.image_alignment == 'left' -%}{{- image -}}{%- endif -%}
    <div class="content_layout__mgtxt">
      <div class="content_interior__mgtxt">
        {%- if section.settings.heading != blank -%}<div class="mgtxt__title">{{ section.settings.heading }}</div>{%- endif -%}
        {%- if section.settings.paragraph != blank -%}<div class="mgtxt__paragraph">{{ section.settings.paragraph }}</div>{%- endif -%}
      </div>
      <div class="media__layout_mgtxt showOnMob">
        <div class="media__interior_mgtxt" js-video-container>
          {% if section.settings.image != blank %}
            {%- if section.settings.image contains '://' -%}
                {{ section.settings.image | image_url:width:600 | image_tag:loading:'lazy',class:'faq-img' }}
            {%- else -%}
                <img src="{{ section.settings.image | asset_url }}" loading="lazy" class="faq-img">
            {%- endif -%}
          {%- elsif section.settings.video != blank -%}
             {{ section.settings.video | video_tag:preload:true, autoplay:true, playsinline:true,muted:true,loop:true,oncontextmenu:"return false;" }}
          {% endif %}
          <div class="play_paused___action">
            <span class="action--play hidden"><svg width="24" height="24" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.5 12.5v-10l7 5z" stroke="#FFF" stroke-linejoin="round"></path></svg></span> 
            <span class="action--pause"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"><path d="M14 19.495v-14h4v14zm-8 0v-14h4v14z" fill="#fff"></path></svg></span> 
          </div>   
        </div>
      </div>      
      <div class="content_faq_collapsible">
        <div class="content_faq_collapsible_interior">
          {%- for block in section.blocks -%}
            {%- if block.type == 'faq' -%}
            <div class="content_faq__FaqList" js-collapsible-outer>
              <div class="content_faq__Faq_interior">
                {%- if block.settings.question != blank -%}
                  <div class="content_faq_Faq_title" js-collapsible-header>
                    <span class="content_faq__FQ">{{ block.settings.question }}</span>
                    <span class="content_faq__FQicon">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="17" viewBox="0 0 18 17" fill="none" class="faq-plus"> <path d="M8.29189 9.24186H0.142578L0.142578 7.75814L8.29189 7.75814V0L9.85041 0V7.75814H17.9997V9.24186L9.85041 9.24186L9.85041 17H8.29189L8.29189 9.24186Z" fill="#1F2322"/></path></svg>
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="17" viewBox="0 0 18 17" fill="none" class="faq-minus"> <rect x="0.142578" y="7.75977" width="17.8571" height="1.48" fill="#1F2322"/></rect> </svg>
                    </span>                  
                  </div>
                {%- endif -%}
                {%- if block.settings.content != blank -%}
                  <div class="content_faq_Faq_paragraph" js-collapsible-content>
                    <div class="content_faq_Faq_para">
                      {{ block.settings.content }}
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
    {%- if section.settings.image_alignment == 'right' -%}{{- image -}}{%- endif -%}
  </div>
</div>{%- endcapture -%}{{- image_with_text | strip_newlines -}}

<style>
 .img-faq-{{section.id}} .mgtxt__title span {
    color: rgb(var(--color-sale-badge)) !important;
  }
</style>

