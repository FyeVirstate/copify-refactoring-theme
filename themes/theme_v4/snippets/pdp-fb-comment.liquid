<div class="facebookComment__mainwrapper facebookComment__wp-{{ block.id }}">
  <div class="facebookComment__maincontainer">
    <div class="facebookComment__interior">
        {%- if block.settings.pf_image != blank -%}
            <div class="facebookComment__profile">{{ block.settings.pf_image | image_url:width:block.settings.pf_image.width | image_tag:preload:true }}</div>
        {%- endif -%}
      
      <div class="facebookComment__content">
        <div class="facebookComment__bubble">
          {%- if block.settings.author_name != blank -%}<div class="facebookComment__author">{{ block.settings.author_name }}</div>{%- endif -%}
          {%- if block.settings.text != blank -%}<div class="facebookComment__text">{{ block.settings.text }}</div>{%- endif -%}
          <div class="facebookComment__reactions">
            <div class="facebookComment__reaction-icons">
              {% comment %} <!-- Like Icon --> {% endcomment %}
