{{ 'component-tickers.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .horizontal-ticker-{{ section.id }} .horizontal-ticker__item {
    font-size: {{ section.settings.text_size }}rem;
    padding: 0 {{ section.settings.text_spacing}}rem;
  }
   .horizontal-ticker__item img.ticker-logo {
    
    height: 19px;
}
  .horizontal-ticker-{{ section.id }} .horizontal-ticker__container {
    animation: horTicker {{ 150 | divided_by: section.settings.speed }}s linear infinite forwards;
  }
  .horizontal-ticker-{{ section.id }}{
/*  background:{{ section.settings.background }};*/
  }
{%- endstyle -%}
 {% assign unique_blocks_total = section.blocks | size %}
 {% assign show_block_title = false %}

    {% if section.settings.show_store_name == true %}

      {% assign show_block_title = true %}
      {% assign block_title = shop.name %}

    {% endif %}

  
<div class="horizontal-ticker horizontal-ticker-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <!-- <div class="horizontal-ticker__inner"> -->
  <div class="horizontal-ticker__container">
   
    {% assign target_multiply = 20 | divided_by: unique_blocks_total | floor %}
    {% assign target_total = unique_blocks_total | times: target_multiply | times: 2 %}
    {% assign block_counter = 0 %}

    

    {%- for block in section.blocks -%}
      {%- assign block_counter = block_counter | plus: 1 -%}
      <p style="color: {{ section.settings.drop_text }}"class="horizontal-ticker__item{% if section.settings.italic_text %} horizontal-ticker__item--italic{% endif %}{% if section.settings.uppercase_text %} horizontal-ticker__item--uppercase{% endif %}{% if section.settings.bold_text %} horizontal-ticker__item--bold{% endif %}">

        {% if show_block_title %}

          {{ block_title }}
        {% else %}

          {% if block.settings.title != blank %}
          {{ block.settings.title }}
          {% elsif block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ shop.name }}" class="ticker-logo">
          {% else %}
            {{ shop.name }}
        {% endif %}
        
    {% endif %}
      
      </p>
    {%- endfor -%}

 
    {%- if block_counter < target_total -%}
      {% for i in (1..15) %}
        {% for block in section.blocks %}
          <p style="color: {{ section.settings.drop_text }}" class="horizontal-ticker__item{% if section.settings.italic_text %} horizontal-ticker__item--italic{% endif %}{% if section.settings.uppercase_text %} horizontal-ticker__item--uppercase{% endif %}{% if section.settings.bold_text %} horizontal-ticker__item--bold{% endif %}">
          {% if show_block_title %}

            {{ block_title }}
          {% else %}
        
            {% if block.settings.title != blank %}
              {{ block.settings.title }}
            {% elsif block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ shop.name }}" class="ticker-logo">
            {% endif %}
          {% endif %}
          </p>

          {% assign block_counter = block_counter | plus: 1 %}
          {% if block_counter >= target_total %}
            {% break %}
          {% endif %}
        {% endfor %}
        {% if block_counter >= target_total %}
          {% break %}
        {% endif %}
      {% endfor %}
    {%- endif -%}
  </div>
  <!-- </div> -->
</div>

{% schema %}
{
  "name": "Horizontal Ticker",
  "settings": [
      {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-4"
    },{
        "type": "checkbox",
        "id": "show_store_name",
        "label": "Default Store Name",
        "default": true
    },{
        "type": "range",
        "id": "speed",
        "label": "Ticker speed",
        "min": 1,
        "max": 5,
        "default": 3,
        "step": 0.5
    },
    {
        "type": "range",
        "id": "text_spacing",
        "label": "Text spacing",
        "min": 1,
        "max": 5,
        "default": 3,
        "step": 0.5
    },
    {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "options": [
            {
                "value": "1.25",
                "label": "Extra small"
            },
            {
                "value": "1.5",
                "label": "Small"
            },
            {
                "value": "1.75",
                "label": "Medium"
            },
            {
                "value": "2",
                "label": "Large"
            },
            {
                "value": "2.5",
                "label": "Extra large"
            }
        ],
        "default": "2.5"
    },
    {
        "type": "checkbox",
        "id": "italic_text",
        "label": "Italic text",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "uppercase_text",
        "label": "Uppercase text",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "bold_text",
        "label": "Bold text",
        "default": false
    },
   
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
  "type": "range",
  "id": "padding_top",
  "min": 0,
  "max": 100,
  "step": 1,
  "unit": "px",
  "label": "t:sections.all.padding.padding_top",
  "default": 17
},
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 17
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
  {
    "name": "Horizontal Ticker",
    "blocks": [
      {
        "type": "text"
      }
    ]
  }
]
}
{% endschema %}
