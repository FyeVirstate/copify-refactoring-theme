<style>

  .heading_slider_free .slick-dots li button:before {
    border: 1px solid rgb(var(--color-foreground));
  }


  .section-{{ section.id }}
  -padding h2
  , .section-{{ section.id }}
  -padding h6
  , .section-{{ section.id }}
  -padding .btn-bottom-box ul li {
    color: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}
  -padding p {
    color: rgb(var(--color-foreground), 0.7);
  }

  .section-{{ section.id }}
  -padding .btn.btn-red {
    background: rgb(var(--color-button));
    color: rgb(var(--color-button-text));
  }

  .section-{{ section.id }}-padding .favorite-item h6:before {
    background: rgb(var(--color-foreground));
  }

  .section-{{ section.id }}
  -padding .btn-bottom-box svg path {
    fill: rgb(var(--color-foreground));
  }

  /* Image height options */
  .center-image--adapt {
    max-width: var(--page-width);
    width: 100%;
    height: auto;
  }

  .center-image--small {
    max-width: var(--page-width);
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .center-image--medium {
    max-width: var(--page-width);
    width: 100%;
    height: 500px;
    object-fit: cover;
  }

  .center-image--large {
    max-width: var(--page-width);
    width: 100%;
    height: 600px;
    object-fit: cover;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }

</style>
<!-- sections->product-section-1 -->
<div class="new-favorite-sec section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">
  <div class="container">

    <div class="desktop-show">
      {% if section.settings.heading != blank %}
        {%- assign title_size = section.settings.heading_size | default: 'h2' -%}
        <h2 class="{{ title_size }}{% if section.settings.highlight_italic %} highlight-italic{% endif %}">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
    <div class="common-new-favorite">

      <!-- Left side features -->
      <div class="favorite-left">
        {% assign l_i = 1 %}
        {% for block in section.blocks %}
          {% if block.type == 'feature_left' %}
            <div class="favorite-item">

              {% assign left_icon = 'product_section_left_icon_' | append: l_i %}

              {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | image_url: origional }}">
                {% comment %} 
                                    {% else %}
                                    <img src="{{ settings[left_icon] | asset_url }}" > 
                                {% endcomment %}
              {% endif %}
              {% assign l_i = l_i | plus: 1 %}

              <h6>{{ block.settings.title }}</h6>
              <p>{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Middle content -->
      <div class="favorite-mid">
        <div class="center-img-box">

          {% assign imgUrl = settings.center_image_name | asset_url %}
          {% if section.settings.center_image != blank %}
            {% assign imgUrl = section.settings.center_image | image_url: origional %}
          {% endif %}

          <img
            src="{{ imgUrl }}"
            alt=""
            class="center-image--{{ section.settings.image_height }}">
        </div>

        <div class="heading show-mobile">
          {%- assign title_size = section.settings.heading_size | default: 'h2' -%}
          <h2 class="{{ title_size }}{% if section.settings.highlight_italic %} highlight-italic{% endif %}">{{ section.settings.heading }}</h2>
          <p>{{ section.settings.subheading }}</p>
        </div>
      </div>

      <!-- Right side features -->
      <div class="favorite-right">
        {% assign r_i = 1 %}
        {% for block in section.blocks %}
          {% if block.type == 'feature_right' %}
            <div class="favorite-item">

              {% assign right_icon = 'product_section_right_icon_' | append: r_i %}

              {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | image_url: origional }}">
                {% comment %} 
                                    {% else %}
                                    <img src="{{ settings[right_icon] | asset_url }}" > 
                                {%  endcomment %}
              {% endif %}
              {% assign r_i = r_i | plus: 1 %}
              <h6>{{ block.settings.title }}</h6>
              <p>{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>

    <!-- Button + guarantee list -->
    <div class="btn-bottom-box">
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-red">{{ section.settings.button_text }}</a>
      {% endif %}
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'guarantee' %}
            <li>
              {% if block.settings.icon != blank %}
                {% render 'icons'
                  , icon: block.settings.icon %}
              {% endif %}
              <span>{{ block.settings.text }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>


