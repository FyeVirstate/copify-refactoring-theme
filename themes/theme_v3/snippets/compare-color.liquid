 <script>  
    document.addEventListener("DOMContentLoaded", function () {
    var openBtn = document.querySelector(".compare-color-btn");
    var popup = document.querySelector(".compare-color-popup");
    var closeBtn = document.querySelector(".compare-color-popup-close");
  
    if (!openBtn || !popup || !closeBtn) {
      console.warn("One or more required elements for the popup are missing.");
      return;
    }
  
    function openPopup() {
      popup.classList.add("open-popup");
      document.documentElement.style.overflow = 'hidden';
    }
  
    function closePopup() {
      popup.classList.remove("open-popup");
      document.documentElement.style.overflow = '';
    }
  
    openBtn.addEventListener("click", openPopup);
    closeBtn.addEventListener("click", closePopup);
    
    
  });
 </script>

