<script>
  const colours = [
    {% assign swatchCompare_option_index = 0 %}
    {% for option in product.options_with_values %}
      {% assign option_name = option.name | downcase %}
      {% assign swatchCompare_option_key = 'option' | append: forloop.index %}
      {% if option_name == 'color' or option_name == 'colour' %}
        {% assign swatchCompare_option_index = forloop.index %}
        {% for value in option.values %}
          {% assign swatchCompare_value_downcased = value | downcase %}
          {% for variant in product.variants %}
            {% assign option_value_downcased = variant[swatchCompare_option_key] | downcase %}
            {% if option_value_downcased == swatchCompare_value_downcased %}
              {% if variant.metafields.custom.swatch_image or variant.image %}
                {% if variant.metafields.custom.swatch_image %}
                  {% assign swatchCompare_image = variant.metafields.custom.swatch_image %}
                {% else %}
                  {% assign swatchCompare_image = variant.image %}
                {% endif %}
                {
                  id: {{ variant.id }},
                  variant_available:{{ variant.available }},
                  name: "{{ variant.title | escape }}",
                  thumb: "{{ swatchCompare_image | image_url: width: 100 }}",
                  full: "{{ variant.featured_image | image_url: width: 600 }}"
                }{% unless forloop.last and forloop.parentloop.last %},{% endunless %}
                {% break %}
              {% endif %}
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  ];

 
</script>
